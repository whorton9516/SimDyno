{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./app/src",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["dom", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/src/*"]
    }
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "app/**/*.d.tsx", "scripts/global.d.ts"],
  "exclude": [
      "node_modules",
      "app/node_modules",
      "dist",
      "out",
      "app/src/highlighter",
       "app/src/main/preload.ts"
    ],
    "compileOnSave": false
}
